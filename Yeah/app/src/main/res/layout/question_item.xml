<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:padding="4dp"
    android:layout_margin="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="7dp">

        <katex.hourglass.in.mathlib.MathView
            android:layout_gravity="center"
            android:id="@+id/math_view"
            app:setClickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:setText="$=\\frac{40}{100}\\times9000$"/>

        <RadioGroup
            android:id="@+id/rgAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rbAnswerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A. Đáp án A"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="normal"
                android:textColor="#1a1a1a"/>
            <RadioButton
                android:id="@+id/rbAnswerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B. Đáp án B"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="normal"
                android:textColor="#1a1a1a"/>
            <RadioButton
                android:id="@+id/rbAnswerC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C. Đáp án C"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="normal"
                android:textColor="#1a1a1a"/>
            <RadioButton
                android:id="@+id/rbAnswerD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D. Đáp án D"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="normal"
                android:textColor="#1a1a1a"/>
        </RadioGroup>
    </LinearLayout>

</android.support.v7.widget.CardView>
